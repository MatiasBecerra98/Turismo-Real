<p id="notice"><%= notice %></p>

<h1>Reservations</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Appartment</th>
      <th>Starting date</th>
      <th>Ending date</th>
      <th>Total cost</th>
      <th>Paid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.user %></td>
        <td><%= reservation.appartment %></td>
        <td><%= reservation.starting_date %></td>
        <td><%= reservation.ending_date %></td>
        <td><%= reservation.total_cost %></td>
        <td><%= reservation.paid %></td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

